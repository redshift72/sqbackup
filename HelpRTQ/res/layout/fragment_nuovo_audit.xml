<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >

	<LinearLayout 
	    android:id="@+id/linearlayoutAudit"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	
	    <EditText
	        android:id="@+id/etDataMail"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="30dp"
	        android:inputType="date"
	        android:hint="@string/audit_data_mail" />
		<ToggleButton 
		    android:id="@+id/tbEsito"
		    android:layout_width="150dp"
		    android:layout_height="wrap_content"
		    android:textOn="Esito positivo"
		    android:textOff="Esito NEGATIVO"
		    android:onClick="onToggleClicked"/>
	    <Button
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:text="@string/salva_audit" 
	        android:onClick="salva" />
	    	    	    
	</LinearLayout>
	    
</ScrollView>